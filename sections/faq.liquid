<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="faq--page">
  <div class="faq--page__header page-width--narrow section-{{ section.id }}-padding">
    <h1 class="faq--page__header-title h0">
      {{ section.settings.heading | escape }}
    </h1>
    <h2 class="faq--page__header-description">
      {{ section.settings.description | escape }}
    </h2>
  </div>
  <div class="faq--page__blocks">
    {%- for block in section.blocks -%}
      {% render 'question-answer', question: block.settings.question, answer: block.settings.answer, color: section.settings.color_scheme %}
    {%- endfor -%}
  </div>
</div>


{% schema %}
{
  "name": "t:sections.faq.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "FAQ Page",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "description",
      "default": "Frequently Asked Questions",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "question-and-answer",
      "name": "t:sections.faq.blocks.question-and-answer.name",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "default": "This is a question?",
          "label": "t:sections.faq.blocks.question-and-answer.settings.question.label"
        },
        {
          "type": "text",
          "id": "answer",
          "default": "This is an answer?",
          "label": "t:sections.faq.blocks.question-and-answer.settings.answer.label"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "green",
              "label": "t:sections.all.colors.green.label"
            },
            {
              "value": "blue",
              "label": "t:sections.all.colors.blue.label"
            },
            {
              "value": "magenta",
              "label": "t:sections.all.colors.magenta.label"
            },
            {
              "value": "black",
              "label": "t:sections.all.colors.background_2.label"
            }
          ],
          "default": "green",
          "label": "t:sections.all.colors.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.faq.presets.name",
      "blocks": [
        {
          "type": "question-and-answer"
        }
      ]
    }
  ]
}
{% endschema %}
